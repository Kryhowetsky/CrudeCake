
@model CakeCrude.Models.OrderCakeViewModel


<div class="container">
    <div class="row">
        <div class="col-lg-5 col-lg-offset-3 ">
            <div class="panel panel-primary">
                <div class="panel-heading panel-head ">
                    <h3 class="text-center">Зробити онлайн замовлення</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Ordercake" id="order-cake-form">

                        <div class="row form-group">
                            <label asp-for="Name" for="Name" class="col-lg-11 col-form-label">Ваше Ім'я</label>
                            <div class="col-lg-11">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Введіть Ваше Ім'я" id="Name" required>
                            </div>
                            <div class="top-buffer"></div>
                            <label asp-for="Surname" for="Surname" class="col-lg-11 col-form-label">Ваше Прізвище</label>
                            <div class="col-lg-11">
                                <input asp-for="Surname" type="text" class="form-control" placeholder="Введіть Ваше Прізвище" id="Surname" required>
                            </div>
                        </div>
                        <div class="top-buffer"></div>
                        <div class="form-group row ">
                            <label asp-for="Phone" for="phone" class="col-lg-11 col-form-label">Номер Телефону</label>
                            <div class="col-lg-11">
                                <input asp-for="Phone" class="form-control" type="tel" placeholder="+380" id="phone" pattern="^((\+3|8|0)+([0-9{2}])[0-9]{8})$" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" for="email" class="col-lg-11 col-form-label">Email</label>
                            <div class="col-lg-11">
                                <input asp-for="Email" class="form-control" type="email" placeholder="example@example.com" id="email" required>
                            </div>
                        </div>
                        <div class="custom-file">
                            <label class="custom-file-label" for="CustomFile1">Виберіть Файл...</label>
                            <input type="file" class="custom-file-input" id="CustomFile1">
                            <label class="custom-file-label" for="CustomFile2">Виберіть Файл...</label>
                            <input type="file" class="custom-file-input" id="CustomFile2">
                            <label class="custom-file-label" for="CustomFile3">Виберіть Файл...</label>
                            <input type="file" class="custom-file-input" id="CustomFile3">
                            <label class="custom-file-label" for="CustomFile4">Виберіть Файл...</label>
                            <input type="file" class="custom-file-input" id="CustomFile4">
                        </div>
                        <div class="top-buffer"></div>
                        <div class="form-group">
                            <label asp-for="Comment" for="comment">Ваш коментарій:</label>
                            <textarea asp-for="Comment" class="form-control" rows="5" id="comment"></textarea>
                        </div>
                        <div class="top-buffer"></div>
                        <div class="col-auto my-1">
                            <button type="button" class="btn btn-success" id="order-cake-submit">
                                <span class="glyphicon glyphicon-ok-sign"> Відправити</span>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_SuccsessModal" />

@section Scripts {
    <script type="text/javascript" src="~/js/order-cake.js"></script>
}